<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.web.dao.ActivityDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.app.web.entity.Activity" id="articleMap">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="type" column="type"/>
        <result property="content" column="content"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="image" column="image"/>
    </resultMap>

	<select id="queryObject" resultType="com.app.web.entity.Activity">
		select * from gm_activity where id = #{value}
	</select>
	
	<select id="queryWebFirst" resultType="com.app.web.entity.Activity">
		select * from gm_activity where status=1 limit 1
	</select>

	<select id="queryList" resultType="com.app.web.entity.Activity">
		select * from gm_activity
		<where>
			<if test="status != null"> status=#{status}</if>
			<if test="type != null">and type=#{type}</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from gm_activity 
	</select>
	 
	<insert id="save" parameterType="com.app.web.entity.Activity" useGeneratedKeys="true" keyProperty="id">
		insert into gm_activity
		(
			`title`, 
			`type`, 
			`content`, 
			`status`, 
			`create_time`, 
			`image`,
			`times`
		)
		values
		(
			#{title}, 
			#{type}, 
			#{content}, 
			#{status}, 
			now(), 
			#{image},
			0
		)
	</insert>
	 
	<update id="update" parameterType="com.app.web.entity.Activity">
		update gm_activity 
		<set>
			<if test="title != null">`title` = #{title}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="image != null">`image` = #{image},</if>
			<if test="times != null">`times` = #{times}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from gm_activity where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from gm_activity where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>